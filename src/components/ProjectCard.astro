---
// src/components/ProjectCard.astro
export interface Props {
  title: string;
  description: string;
  image: string;
  link: string;
}

const { title, description, image, link } = Astro.props;
---

<article>
  <img src={image} alt={title} />
  <h3>{title}</h3>
  <p>{description}</p>
  <a href={link} target="_blank">Ver Proyecto</a>
</article>

<style>
  article {
    border: 1px solid #ddd;
    padding: 1rem;
    border-radius: 8px;
    text-align: center;
    margin-top: 5px;
  }
  img {
    max-width: 100%;
    border-radius: 8px;
  }
  h3 {
    margin: 0.5rem 0;
  }
  a {
    color: #007bff;
    text-decoration: none;
  }
  a:hover {
    text-decoration: underline;
  }
</style>
